              "name": "Get Song Details (Info + Lyric)",
              "request": { 
                "method": "GET", 
                "header": [], 
                "url": "{{baseUrl}}/api/v1/user/songs/{{zingSongId}}",
                "description": "Get complete song information including metadata and lyrics"
              }
            },
            {
              "name": "Get Song Info Only (Metadata)",
              "request": { 
                "method": "GET", 
                "header": [], 
                "url": {
                  "raw": "{{baseUrl}}/api/v1/user/songs/{{zingSongId}}/info",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "v1", "user", "songs", "{{zingSongId}}", "info"]
