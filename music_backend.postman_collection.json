            {
              "name": "Register",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"user1\",\n  \"email\": \"user1@example.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/user/auth/register"
          }
        },
        {
              "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "try {",
                  "  const json = pm.response.json();",
                  "  const token = json && json.data && json.data.token;",
                  "  if (token) { pm.collectionVariables.set('userToken', token); }",
                  "} catch (e) {}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"username\": \"user1\",\n  \"password\": \"123456\"\n}" },
            "url": "{{baseUrl}}/api/v1/user/auth/login"
